    MiniBtn.Parent = MiniUI
    
    CreateCorner(MiniBtn, 10)
    
    MiniBtn.MouseEnter:Connect(function()
        Tween(MiniBtn, {BackgroundColor3 = CurrentTheme.Accent}, 0.2)
    end)
    
