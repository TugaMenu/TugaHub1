-- Create Config Panel
local function CreateConfigPanel(ScreenGui, Main, Window)
    local ConfigPanel = Instance.new("Frame")
    ConfigPanel.Name = "ConfigPanel"
    ConfigPanel.Size = UDim2.new(0, 0, 1, -58)
    ConfigPanel.Position = UDim2.new(1, 0, 0, 54)
    ConfigPanel.BackgroundColor3 = CurrentTheme.Surface
    ConfigPanel.BorderSizePixel = 0
    ConfigPanel.ClipsDescendants = true
    ConfigPanel.Visible = false
    ConfigPanel.Parent = Main
    
    CreateCorner(ConfigPanel, 10)
    CreateStroke(ConfigPanel, CurrentTheme.Border, 1, 0.5)
    
    local ConfigScroll = Instance.new("ScrollingFrame")
    ConfigScroll.Size = UDim2.new(1, -16, 1, -16)
    ConfigScroll.Position = UDim2.new(0, 8, 0, 8)
    ConfigScroll.BackgroundTransparency = 1
    ConfigScroll.BorderSizePixel = 0
    ConfigScroll.ScrollBarThickness = 4
    ConfigScroll.ScrollBarImageColor3 = CurrentTheme.Primary
    ConfigScroll.CanvasSize = UDim2.new(0, 0, 0, 0)
    ConfigScroll.Parent = ConfigPanel
    
    local ConfigLayout = Instance.new("UIListLayout")
    ConfigLayout.SortOrder = Enum.SortOrder.LayoutOrder
    ConfigLayout.Padding = UDim.new(0, 12)
    ConfigLayout.Parent = ConfigScroll
    
    ConfigLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
        ConfigScroll.CanvasSize = UDim2.new(0, 0, 0, ConfigLayout.AbsoluteContentSize.Y + 16)
    end)
    
    -- Config Title
    local ConfigTitle = Instance.new("TextLabel")
    ConfigTitle.Size = UDim2.new(1, 0, 0, 40)
    ConfigTitle.BackgroundTransparency = 1
    ConfigTitle.Text = "‚öôÔ∏è Configura√ß√µes"
    ConfigTitle.Font = Enum.Font.GothamBold
    ConfigTitle.TextSize = 18
    ConfigTitle.TextColor3 = CurrentTheme.Primary
    ConfigTitle.Parent = ConfigScroll
    
    -- Theme Section
    local ThemeSection = Instance.new("TextLabel")
    ThemeSection.Size = UDim2.new(1, 0, 0, 30)
    ThemeSection.BackgroundTransparency = 1
    ThemeSection.Text = "‚îÅ‚îÅ Temas ‚îÅ‚îÅ"
    ThemeSection.Font = Enum.Font.GothamBold
    ThemeSection.TextSize = 14
    ThemeSection.TextColor3 = CurrentTheme.Accent
    ThemeSection.Parent = ConfigScroll
    
    -- Theme Buttons
    local themes = {"Portugal", "Dark", "Light", "Ocean", "Sunset", "Forest"}
    for _, themeName in ipairs(themes) do
        local ThemeBtn = Instance.new("TextButton")
        ThemeBtn.Size = UDim2.new(1, 0, 0, 45)
        ThemeBtn.BackgroundColor3 = CurrentTheme.Background
        ThemeBtn.BorderSizePixel = 0
        ThemeBtn.Text = ""
        ThemeBtn.AutoButtonColor = false
        ThemeBtn.Parent = ConfigScroll
        
        CreateCorner(ThemeBtn, 8)
        CreateStroke(ThemeBtn, CurrentTheme.Border, 1, 0.5)
        
        local ThemeLabel = Instance.new("TextLabel")
        ThemeLabel.Size = UDim2.new(1, -50, 1, 0)
        ThemeLabel.Position = UDim2.new(0, 12, 0, 0)
        ThemeLabel.BackgroundTransparency = 1
        ThemeLabel.Text = themeName
        ThemeLabel.Font = Enum.Font.GothamSemibold
        ThemeLabel.TextSize = 14
        ThemeLabel.TextColor3 = CurrentTheme.Text
        ThemeLabel.TextXAlignment = Enum.TextXAlignment.Left
        ThemeLabel.Parent = ThemeBtn
        
        local ThemePreview = Instance.new("Frame")
        ThemePreview.Size = UDim2.new(0, 30, 0, 30)
        ThemePreview.Position = UDim2.new(1, -38, 0.5, 0)
        ThemePreview.AnchorPoint = Vector2.new(0, 0.5)
        ThemePreview.BackgroundColor3 = TugaHub.Themes[themeName].Primary
        ThemePreview.BorderSizePixel = 0
        ThemePreview.Parent = ThemeBtn
        
        CreateCorner(ThemePreview, 8)
        
        ThemeBtn.MouseEnter:Connect(function()
            Tween(ThemeBtn, {BackgroundColor3 = CurrentTheme.Sidebar}, 0.2)
        end)
        
        ThemeBtn.MouseLeave:Connect(function()
            Tween(ThemeBtn, {BackgroundColor3 = CurrentTheme.Background}, 0.2)
        end)
        
        ThemeBtn.MouseButton1Click:Connect(function()
            CurrentTheme = TugaHub.Themes[themeName]
            Window:Notify({
                Title = "Tema Alterado",
                Description = "Tema " .. themeName .. " aplicado! Reabra o hub para ver as mudan√ßas.",
                Duration = 3
            })
        end)
    end
    
    -- Keybind Section
    local KeySection = Instance.new("TextLabel")
    KeySection.Size = UDim2.new(1, 0, 0, 30)
    KeySection.BackgroundTransparency = 1
    KeySection.Text = "‚îÅ‚îÅ Tecla de Atalho ‚îÅ‚îÅ"
    KeySection.Font = Enum.Font.GothamBold
    KeySection.TextSize = 14
    KeySection.TextColor3 = CurrentTheme.Accent
    KeySection.Parent = ConfigScroll
    
    -- Keybind Buttons
    local keys = {
        {name = "Shift Direito", key = Enum.KeyCode.RightShift},
        {name = "K", key = Enum.KeyCode.K},
        {name = "Ctrl Direito", key = Enum.KeyCode.RightControl}
    }
    
    for _, keyData in ipairs(keys) do
        local KeyBtn = Instance.new("TextButton")
        KeyBtn.Size = UDim2.new(1, 0, 0, 45)
        KeyBtn.BackgroundColor3 = CurrentTheme.Background
        KeyBtn.BorderSizePixel = 0
        KeyBtn.Text = ""
        KeyBtn.AutoButtonColor = false
        KeyBtn.Parent = ConfigScroll
        
        CreateCorner(KeyBtn, 8)
        CreateStroke(KeyBtn, CurrentTheme.Border, 1, 0.5)
        
        local KeyLabel = Instance.new("TextLabel")
        KeyLabel.Size = UDim2.new(1, -50, 1, 0)
        KeyLabel.Position = UDim2.new(0, 12, 0, 0)
        KeyLabel.BackgroundTransparency = 1
        KeyLabel.Text = keyData.name
        KeyLabel.Font = Enum.Font.GothamSemibold
        KeyLabel.TextSize = 14
        KeyLabel.TextColor3 = CurrentTheme.Text
        KeyLabel.TextXAlignment = Enum.TextXAlignment.Left
        KeyLabel.Parent = KeyBtn
        
        local KeyCheck = Instance.new("TextLabel")
        KeyCheck.Size = UDim2.new(0, 30, 0, 30)
        KeyCheck.Position = UDim2.new(1, -38, 0.5, 0)
        KeyCheck.AnchorPoint = Vector2.new(0, 0.5)
        KeyCheck.BackgroundColor3 = CurrentTheme.Sidebar
        KeyCheck.BorderSizePixel = 0
        KeyCheck.Text = TugaHub.Settings.ToggleKey == keyData.key and "‚úì" or ""
        KeyCheck.Font = Enum.Font.GothamBold
        KeyCheck.TextSize = 18
        KeyCheck.TextColor3 = CurrentTheme.Success
        KeyCheck.Parent = KeyBtn
        
        CreateCorner(KeyCheck, 8)
        
        KeyBtn.MouseEnter:Connect(function()
            Tween(KeyBtn, {BackgroundColor3 = CurrentTheme.Sidebar}, 0.2)
        end)
        
        KeyBtn.MouseLeave:Connect(function()
            Tween(KeyBtn, {BackgroundColor3 = CurrentTheme.Background}, 0.2)
        end)
        
        KeyBtn.MouseButton1Click:Connect(function()
            TugaHub.Settings.ToggleKey = keyData.key
            
            for _, otherBtn in ipairs(ConfigScroll:GetChildren()) do
                if otherBtn:IsA("TextButton") and otherBtn:FindFirstChild("TextLabel") then
                    local check = otherBtn:FindFirstChildOfClass("TextLabel")
                    if check and check.Name ~= "TextLabel" then
                        check.Text = ""
                    end
                end
            end
            
            KeyCheck.Text = "‚úì"
            
            Window:Notify({
                Title = "Tecla Alterada",
                Description = "Use " .. keyData.name .. " para abrir/fechar o hub",
                Duration = 3
            })
        end)
    end
    
    -- Credits
    local Credits = Instance.new("TextLabel")
    Credits.Size = UDim2.new(1, 0, 0, 60)
    Credits.BackgroundColor3 = CurrentTheme.Background
    Credits.BorderSizePixel = 0
    Credits.Text = "‚ú® by Portuga_MTA ‚ú®\nTugaHub v" .. TugaHub.Version
    Credits.Font = Enum.Font.GothamBold
    Credits.TextSize = 13
    Credits.TextColor3 = CurrentTheme.Primary
    Credits.Parent = ConfigScroll
    
    CreateCorner(Credits, 8)
    
    return ConfigPanel
end

-- Create Main GUI
