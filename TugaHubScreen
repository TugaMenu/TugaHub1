-- Update Theme Colors
local function UpdateThemeColors(refs, theme)
    CurrentTheme = theme
    
    -- Main
    refs.Main.BackgroundColor3 = theme.Background
    refs.Main.UIStroke.Color = theme.Border
    
    -- Topbar
    refs.Topbar.BackgroundColor3 = theme.Surface
    refs.TopbarFix.BackgroundColor3 = theme.Surface
    refs.Logo.BackgroundColor3 = theme.Primary
    refs.Title.TextColor3 = theme.Text
    refs.Subtitle.TextColor3 = theme.TextDim
    
    -- Toggle Button
    if refs.ToggleButton then
        refs.ToggleButton.BackgroundColor3 = theme.Primary
        refs.ToggleButton.UIStroke.Color = theme.Border
    end
    
    -- Sidebar
    refs.Sidebar.BackgroundColor3 = theme.Sidebar
    refs.Sidebar.UIStroke.Color = theme.Border
    refs.SearchBar.BackgroundColor3 = theme.Background
    refs.SearchIcon.TextColor3 = theme.TextDim
    refs.SearchInput.TextColor3 = theme.Text
    refs.SearchInput.PlaceholderColor3 = theme.TextDim
    refs.TabContainer.ScrollBarImageColor3 = theme.Primary
    
    -- Content
    refs.Content.BackgroundColor3 = theme.Surface
    refs.Content.UIStroke.Color = theme.Border
    
    -- Controls
    for _, btn in ipairs(refs.Controls:GetChildren()) do
        if btn:IsA("TextButton") then
            btn.BackgroundColor3 = theme.Sidebar
            btn.TextColor3 = theme.TextDim
        end
    end
end

-- Create Theme Selector
local function CreateThemeSelector(GUI, ThemeBtn, windowRef, refs)
    local ThemeFrame = Instance.new("Frame")
    ThemeFrame.Name = "ThemeSelector"
    ThemeFrame.Size = UDim2.new(0, 0, 0, 0)
    ThemeFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
    ThemeFrame.AnchorPoint = Vector2.new(0.5, 0.5)
    ThemeFrame.BackgroundColor3 = CurrentTheme.Surface
    ThemeFrame.BorderSizePixel = 0
    ThemeFrame.Visible = false
    ThemeFrame.ZIndex = 1000
    ThemeFrame.Parent = GUI
    
    CreateCorner(ThemeFrame, 12)
    CreateStroke(ThemeFrame, CurrentTheme.Border, 2)
    
    local ThemeShadow = Instance.new("ImageLabel")
    ThemeShadow.Size = UDim2.new(1, 30, 1, 30)
    ThemeShadow.Position = UDim2.new(0.5, 0, 0.5, 0)
    ThemeShadow.AnchorPoint = Vector2.new(0.5, 0.5)
    ThemeShadow.BackgroundTransparency = 1
    ThemeShadow.Image = "rbxassetid://1316045217"
    ThemeShadow.ImageColor3 = Color3.fromRGB(0, 0, 0)
    ThemeShadow.ImageTransparency = 0.5
    ThemeShadow.ScaleType = Enum.ScaleType.Slice
    ThemeShadow.SliceCenter = Rect.new(10, 10, 118, 118)
    ThemeShadow.ZIndex = 999
    ThemeShadow.Parent = ThemeFrame
    
    local ThemeTitle = Instance.new("TextLabel")
    ThemeTitle.Size = UDim2.new(1, -20, 0, 40)
    ThemeTitle.Position = UDim2.new(0, 10, 0, 10)
    ThemeTitle.BackgroundTransparency = 1
    ThemeTitle.Text = "üé® Selecionar Tema"
    ThemeTitle.Font = Enum.Font.GothamBold
    ThemeTitle.TextSize = 16
    ThemeTitle.TextColor3 = CurrentTheme.Text
    ThemeTitle.TextXAlignment = Enum.TextXAlignment.Left
    ThemeTitle.Parent = ThemeFrame
    
    local ThemeContainer = Instance.new("Frame")
    ThemeContainer.Size = UDim2.new(1, -20, 1, -100)
    ThemeContainer.Position = UDim2.new(0, 10, 0, 50)
    ThemeContainer.BackgroundTransparency = 1
    ThemeContainer.Parent = ThemeFrame
    
    local ThemeLayout = Instance.new("UIListLayout")
    ThemeLayout.SortOrder = Enum.SortOrder.LayoutOrder
    ThemeLayout.Padding = UDim.new(0, 8)
    ThemeLayout.Parent = ThemeContainer
    
    -- Create theme options
    for themeName, theme in pairs(TugaHub.Themes) do
        local ThemeOption = Instance.new("TextButton")
        ThemeOption.Size = UDim2.new(1, 0, 0, 50)
        ThemeOption.BackgroundColor3 = CurrentTheme.Background
        ThemeOption.BorderSizePixel = 0
        ThemeOption.Text = ""
        ThemeOption.AutoButtonColor = false
        ThemeOption.Parent = ThemeContainer
        
        CreateCorner(ThemeOption, 8)
        CreateStroke(ThemeOption, CurrentTheme.Border, 1, 0.5)
        
        local ColorPreview = Instance.new("Frame")
        ColorPreview.Size = UDim2.new(0, 35, 0, 35)
        ColorPreview.Position = UDim2.new(0, 8, 0.5, 0)
        ColorPreview.AnchorPoint = Vector2.new(0, 0.5)
        ColorPreview.BackgroundColor3 = theme.Primary
        ColorPreview.BorderSizePixel = 0
        ColorPreview.Parent = ThemeOption
        
        CreateCorner(ColorPreview, 8)
        
        local ThemeLabel = Instance.new("TextLabel")
        ThemeLabel.Size = UDim2.new(1, -55, 1, 0)
        ThemeLabel.Position = UDim2.new(0, 50, 0, 0)
        ThemeLabel.BackgroundTransparency = 1
        ThemeLabel.Text = theme.Name
        ThemeLabel.Font = Enum.Font.GothamSemibold
        ThemeLabel.TextSize = 14
        ThemeLabel.TextColor3 = CurrentTheme.Text
        ThemeLabel.TextXAlignment = Enum.TextXAlignment.Left
        ThemeLabel.Parent = ThemeOption
        
        ThemeOption.MouseEnter:Connect(function()
            Tween(ThemeOption, {BackgroundColor3 = CurrentTheme.Sidebar}, 0.2)
        end)
        
        ThemeOption.MouseLeave:Connect(function()
            Tween(ThemeOption, {BackgroundColor3 = CurrentTheme.Background}, 0.2)
        end)
        
        ThemeOption.MouseButton1Click:Connect(function()
            if windowRef then
                windowRef:SetTheme(themeName)
            end
            
            Tween(ThemeFrame, {Size = UDim2.new(0, 0, 0, 0)}, 0.3, Enum.EasingStyle.Back)
            task.wait(0.3)
            ThemeFrame.Visible = false
        end)
    end
    
    local CloseThemeBtn = Instance.new("TextButton")
    CloseThemeBtn.Size = UDim2.new(1, -20, 0, 35)
    CloseThemeBtn.Position = UDim2.new(0, 10, 1, -45)
    CloseThemeBtn.BackgroundColor3 = CurrentTheme.Error
    CloseThemeBtn.BorderSizePixel = 0
    CloseThemeBtn.Text = "Fechar"
    CloseThemeBtn.Font = Enum.Font.GothamBold
    CloseThemeBtn.TextSize = 14
    CloseThemeBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    CloseThemeBtn.AutoButtonColor = false
    CloseThemeBtn.Parent = ThemeFrame
    
    CreateCorner(CloseThemeBtn, 8)
    
    CloseThemeBtn.MouseButton1Click:Connect(function()
        Tween(ThemeFrame, {Size = UDim2.new(0, 0, 0, 0)}, 0.3, Enum.EasingStyle.Back)
        task.wait(0.3)
        ThemeFrame.Visible = false
    end)
    
    CloseThemeBtn.MouseEnter:Connect(function()
        Tween(CloseThemeBtn, {BackgroundColor3 = Color3.fromRGB(200, 50, 50)}, 0.2)
    end)
    
    CloseThemeBtn.MouseLeave:Connect(function()
        Tween(CloseThemeBtn, {BackgroundColor3 = CurrentTheme.Error}, 0.2)
    end)
    
    ThemeBtn.MouseButton1Click:Connect(function()
        ThemeFrame.Visible = true
        ThemeFrame.Size = UDim2.new(0, 0, 0, 0)
        Tween(ThemeFrame, {Size = UDim2.new(0, 320, 0, 280)}, 0.4, Enum.EasingStyle.Back)
    end)
    
    return ThemeFrame
end

-- Create Window
function TugaHub:CreateWindow(config)
    config = config or {}
    config.Name = config.Name or "TugaHub"
    config.Theme = config.Theme or "Portugal"
    config.LoadingEnabled = config.LoadingEnabled ~= false
    config.SaveConfig = config.SaveConfig ~= false
    
    CurrentTheme = TugaHub.Themes[config.Theme] or TugaHub.Themes.Portugal
    
    local GUI, Main, TabContainer, Content, SearchInput, ThemeBtn, ToggleButton, refs = CreateMainGUI(config)
    
    refs.Main = Main
    refs.Content = Content
    refs.TabContainer = TabContainer
    refs.SearchInput = SearchInput
    refs.ToggleButton = ToggleButton
    
    local Window = {
        GUI = GUI,
        Main = Main,
        ToggleButton = ToggleButton,
        Tabs = {},
        CurrentTab = nil,
        Elements = {},
        CurrentThemeName = config.Theme,
        Refs = refs,
        ConfigName = config.Name:gsub("%s+", "_")
    }
    
    table.insert(TugaHub.Windows, Window)
    
    CreateThemeSelector(GUI, ThemeBtn, Window, refs)
    
    -- Loading Animation
    if config.LoadingEnabled then
        Main.Size = UDim2.new(0, 0, 0, 0)
        Main.Rotation = -90
        
        task.wait(0.1)
        
        Tween(Main, {
            Size = UDim2.new(0, 680, 0, 480),
            Rotation = 0
        }, 0.7, Enum.EasingStyle.Back):Play()
        
        task.wait(0.7)
    end
    
    -- Search Functionality
    SearchInput:GetPropertyChangedSignal("Text"):Connect(function()
        local searchText = SearchInput.Text:lower()
        
        for _, tab in pairs(Window.Tabs) do
            if searchText == "" then
                tab.Button.Visible = true
            else
                tab.Button.Visible = tab.Name:lower():find(searchText, 1, true) ~= nil
            end
        end
    end)
    
    -- Set Theme Function
    function Window:SetTheme(themeName)
        local newTheme = TugaHub.Themes[themeName]
        if not newTheme then
            warn("TugaHub: Tema '" .. themeName .. "' n√£o encontrado")
            return
        end
        
        Window.CurrentThemeName = themeName
        
        -- Update all colors
        UpdateThemeColors(refs, newTheme)
        
        -- Update tabs
        for _, tab in pairs(Window.Tabs) do
            if Window.CurrentTab == tab.Name then
                tab.Button.BackgroundColor3 = newTheme.Background
                tab.Icon.TextColor3 = newTheme.Primary
                tab.Label.TextColor3 = newTheme.Text
            else
                tab.Icon.TextColor3 = newTheme.TextDim
                tab.Label.TextColor3 = newTheme.TextDim
            end
            
            -- Update tab elements
            for _, element in ipairs(tab.Content:GetChildren()) do
                if element:IsA("Frame") and element:FindFirstChild("UIStroke") then
                    element.UIStroke.Color = newTheme.Border
                end
            end
        end
        
        -- Save theme preference
        if config.SaveConfig then
            SaveConfig(Window.ConfigName .. "_theme", {theme = themeName})
        end
        
        Window:Notify({
            Title = "Tema Alterado",
            Description = "Tema alterado para " .. newTheme.Name,
            Duration = 2
        })
    end
    
    -- Load saved theme
    if config.SaveConfig then
        local savedTheme = LoadConfig(Window.ConfigName .. "_theme")
        if savedTheme and savedTheme.theme then
            task.wait(0.5)
            Window:SetTheme(savedTheme.theme)
        end
    end
    
    -- Create Tab
    function Window:CreateTab(name, icon)
        icon = icon or "üìÑ"
        
        local TabButton = Instance.new("TextButton")
        TabButton.Name = name
        TabButton.Size = UDim2.new(1, 0, 0, 42)
        TabButton.BackgroundColor3 = CurrentTheme.Background
        TabButton.BackgroundTransparency = 1
        TabButton.BorderSizePixel = 0
        TabButton.Text = ""
        TabButton.AutoButtonColor = false
        TabButton.Parent = TabContainer
        
        CreateCorner(TabButton, 8)
        
        local TabIcon = Instance.new("TextLabel")
        TabIcon.Name = "Icon"
        TabIcon.Size = UDim2.new(0, 32, 1, 0)
        TabIcon.Position = UDim2.new(0, 8, 0, 0)
        TabIcon.BackgroundTransparency = 1
        TabIcon.Text = icon
        TabIcon.Font = Enum.Font.GothamBold
        TabIcon.TextSize = 18
        TabIcon.TextColor3 = CurrentTheme.TextDim
        TabIcon.Parent = TabButton
        
        local TabLabel = Instance.new("TextLabel")
        TabLabel.Name = "Label"
        TabLabel.Size = UDim2.new(1, -45, 1, 0)
        TabLabel.Position = UDim2.new(0, 40, 0, 0)
        TabLabel.BackgroundTransparency = 1
        TabLabel.Text = name
        TabLabel.Font = Enum.Font.GothamSemibold
        TabLabel.TextSize = 13
        TabLabel.TextColor3 = CurrentTheme.TextDim
        TabLabel.TextXAlignment = Enum.TextXAlignment.Left
        TabLabel.Parent = TabButton
        
        -- Tab Content
        local TabContent = Instance.new("ScrollingFrame")
        TabContent.Name = name .. "_Content"
        TabContent.Size = UDim2.new(1, -16, 1, -16)
        TabContent.Position = UDim2.new(0, 8, 0, 8)
        TabContent.BackgroundTransparency = 1
        TabContent.BorderSizePixel = 0
        TabContent.ScrollBarThickness = 4
        TabContent.ScrollBarImageColor3 = CurrentTheme.Primary
        TabContent.CanvasSize = UDim2.new(0, 0, 0, 0)
        TabContent.Visible = false
        TabContent.Parent = Content
        
        local ContentLayout = Instance.new("UIListLayout")
        ContentLayout.SortOrder = Enum.SortOrder.LayoutOrder
        ContentLayout.Padding = UDim.new(0, 10)
        ContentLayout.Parent = TabContent
        
        ContentLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
            TabContent.CanvasSize = UDim2.new(0, 0, 0, ContentLayout.AbsoluteContentSize.Y + 16)
        end)
        
        -- Selection Logic
        local function SelectTab()
            for _, tab in pairs(Window.Tabs) do
                Tween(tab.Button, {BackgroundTransparency = 1}, 0.2)
                Tween(tab.Icon, {TextColor3 = CurrentTheme.TextDim}, 0.2)
                Tween(tab.Label, {TextColor3 = CurrentTheme.TextDim}, 0.2)
                tab.Content.Visible = false
            end
            
            Tween(TabButton, {BackgroundTransparency = 0}, 0.2)
            Tween(TabIcon, {TextColor3 = CurrentTheme.Primary}, 0.2)
            Tween(TabLabel, {TextColor3 = CurrentTheme.Text}, 0.2)
            TabContent.Visible = true
            
            Window.CurrentTab = name
        end
        
        TabButton.MouseButton1Click:Connect(SelectTab)
        
        TabButton.MouseEnter:Connect(function()
            if Window.CurrentTab ~= name then
                Tween(TabButton, {BackgroundTransparency = 0.5}, 0.2)
            end
        end)
        
        TabButton.MouseLeave:Connect(function()
            if Window.CurrentTab ~= name then
                Tween(TabButton, {BackgroundTransparency = 1}, 0.2)
            end
        end)
        
        local Tab = {
            Name = name,
            Button = TabButton,
            Icon = TabIcon,
            Label = TabLabel,
            Content = TabContent
        }
        
        Window.Tabs[name] = Tab
        
        -- Select first tab
        if #TabContainer:GetChildren() == 2 then
            task.wait(0.05)
            SelectTab()
        end
        
        -- Tab Elements
        local Elements = {}
        
        -- Section
        function Elements:CreateSection(title)
            local Section = Instance.new("Frame")
            Section.Name = "Section"
            Section.Size = UDim2.new(1, 0, 0, 35)
            Section.BackgroundTransparency = 1
            Section.Parent = TabContent
            
            local SectionLabel = Instance.new("TextLabel")
            SectionLabel.Size = UDim2.new(1, -10, 1, 0)
            SectionLabel.Position = UDim2.new(0, 5, 0, 0)
            SectionLabel.BackgroundTransparency = 1
            SectionLabel.Text = "‚îÅ‚îÅ " .. title .. " ‚îÅ‚îÅ"
            SectionLabel.Font = Enum.Font.GothamBold
            SectionLabel.TextSize = 14
            SectionLabel.TextColor3 = CurrentTheme.Primary
            SectionLabel.Parent = Section
            
            return Section
        end
        
        -- Button
        function Elements:CreateButton(config)
            config = config or {}
            config.Name = config.Name or "Button"
            config.Callback = config.Callback or function() end
            
            local Button = Instance.new("TextButton")
            Button.Name = "Button"
            Button.Size = UDim2.new(1, 0, 0, 45)
            Button.BackgroundColor3 = CurrentTheme.Background
            Button.BorderSizePixel = 0
            Button.Text = ""
            Button.AutoButtonColor = false
            Button.Parent = TabContent
            
            CreateCorner(Button, 8)
            CreateStroke(Button, CurrentTheme.Border, 1, 0.5)
            
            local ButtonLabel = Instance.new("TextLabel")
            ButtonLabel.Size = UDim2.new(1, -50, 1, 0)
            ButtonLabel.Position = UDim2.new(0, 12, 0, 0)
            ButtonLabel.BackgroundTransparency = 1
            ButtonLabel.Text = config.Name
            ButtonLabel.Font = Enum.Font.GothamSemibold
            ButtonLabel.TextSize = 14
            ButtonLabel.TextColor3 = CurrentTheme.Text
            ButtonLabel.TextXAlignment = Enum.TextXAlignment.Left
            ButtonLabel.Parent = Button
            
            local ButtonIcon = Instance.new("TextLabel")
            ButtonIcon.Size = UDim2.new(0, 35, 1, 0)
            ButtonIcon.Position = UDim2.new(1, -40, 0, 0)
            ButtonIcon.BackgroundTransparency = 1
            ButtonIcon.Text = "‚ñ∂"
            ButtonIcon.Font = Enum.Font.GothamBold
            ButtonIcon.TextSize = 14
            ButtonIcon.TextColor3 = CurrentTheme.Primary
            ButtonIcon.Parent = Button
            
            Button.MouseEnter:Connect(function()
                Tween(Button, {BackgroundColor3 = CurrentTheme.Sidebar}, 0.2)
                Tween(Button.UIStroke, {Transparency = 0}, 0.2)
            end)
            
            Button.MouseLeave:Connect(function()
                Tween(Button, {BackgroundColor3 = CurrentTheme.Background}, 0.2)
                Tween(Button.UIStroke, {Transparency = 0.5}, 0.2)
            end)
            
            Button.MouseButton1Click:Connect(function()
                Tween(Button, {BackgroundColor3 = CurrentTheme.Primary}, 0.1)
                Tween(ButtonLabel, {TextColor3 = Color3.fromRGB(255, 255, 255)}, 0.1)
                task.wait(0.15)
                Tween(Button, {BackgroundColor3 = CurrentTheme.Background}, 0.2)
                Tween(ButtonLabel, {TextColor3 = CurrentTheme.Text}, 0.2)
                
                task.spawn(config.Callback)
            end)
            
            return Button
        end
        
        -- Toggle
        function Elements:CreateToggle(config)
            config = config or {}
            config.Name = config.Name or "Toggle"
            config.Default = config.Default or false
            config.Callback = config.Callback or function() end
            
            local Toggle = Instance.new("Frame")
            Toggle.Name = "Toggle"
            Toggle.Size = UDim2.new(1, 0, 0, 45)
            Toggle.BackgroundColor3 = CurrentTheme.Background
            Toggle.BorderSizePixel = 0
            Toggle.Parent = TabContent
            
            CreateCorner(Toggle, 8)
            CreateStroke(Toggle, CurrentTheme.Border, 1, 0.5)
            
            local ToggleLabel = Instance.new("TextLabel")
            ToggleLabel.Size = UDim2.new(1, -70, 1, 0)
            ToggleLabel.Position = UDim2.new(0, 12, 0, 0)
            ToggleLabel.BackgroundTransparency = 1
            ToggleLabel.Text = config.Name
            ToggleLabel.Font = Enum.Font.GothamSemibold
            ToggleLabel.TextSize = 14
            ToggleLabel.TextColor3 = CurrentTheme.Text
            ToggleLabel.TextXAlignment = Enum.TextXAlignment.Left
            ToggleLabel.Parent = Toggle
            
            local ToggleButton = Instance.new("TextButton")
            ToggleButton.Size = UDim2.new(0, 50, 0, 26)
            ToggleButton.Position = UDim2.new(1, -58, 0.5, 0)
            ToggleButton.AnchorPoint = Vector2.new(0, 0.5)
            ToggleButton.BackgroundColor3 = CurrentTheme.Sidebar
            ToggleButton.BorderSizePixel = 0
            ToggleButton.Text = ""
            ToggleButton.AutoButtonColor = false
            ToggleButton.Parent = Toggle
            
            CreateCorner(ToggleButton, 13)
            CreateStroke(ToggleButton, CurrentTheme.Border, 1, 0.5)
            
            local ToggleCircle = Instance.new("Frame")
            ToggleCircle.Size = UDim2.new(0, 20, 0, 20)
            ToggleCircle.Position = UDim2.new(0, 3, 0.5, 0)
            ToggleCircle.AnchorPoint = Vector2.new(0, 0.5)
            ToggleCircle.BackgroundColor3 = CurrentTheme.TextDim
            ToggleCircle.BorderSizePixel = 0
            ToggleCircle.Parent = ToggleButton
            
            CreateCorner(ToggleCircle, 10)
            
            local toggled = config.Default
            
            local function Update()
                if toggled then
                    Tween(ToggleButton, {BackgroundColor3 = CurrentTheme.Primary}, 0.25)
                    Tween(ToggleButton.UIStroke, {Color = CurrentTheme.Primary}, 0.25)
                    Tween(ToggleCircle, {
                        Position = UDim2.new(1, -23, 0.5, 0),
                        BackgroundColor3 = CurrentTheme.Text
                    }, 0.25, Enum.EasingStyle.Back)
                else
                    Tween(ToggleButton, {BackgroundColor3 = CurrentTheme.Sidebar}, 0.25)
                    Tween(ToggleButton.UIStroke, {Color = CurrentTheme.Border}, 0.25)
                    Tween(ToggleCircle, {
                        Position = UDim2.new(0, 3, 0.5, 0),
                        BackgroundColor3 = CurrentTheme.TextDim
                    }, 0.25, Enum.EasingStyle.Back)
                end
                
                task.spawn(config.Callback, toggled)
            end
            
            ToggleButton.MouseButton1Click:Connect(function()
                toggled = not toggled
                Update()
            end)
            
            Update()
            
            return {
                Set = function(value)
                    toggled = value
                    Update()
                end,
                Get = function()
                    return toggled
                end
            }
        end
        
        -- Slider
        function Elements:CreateSlider(config)
            config = config or {}
            config.Name = config.Name or "Slider"
            config.Min = config.Min or 0
            config.Max = config.Max or 100
            config.Default = config.Default or 50
            config.Callback = config.Callback or function() end
            
            local Slider = Instance.new("Frame")
            Slider.Name = "Slider"
            Slider.Size = UDim2.new(1, 0, 0, 65)
            Slider.BackgroundColor3 = CurrentTheme.Background
            Slider.BorderSizePixel = 0
            Slider.Parent = TabContent
            
            CreateCorner(Slider, 8)
            CreateStroke(Slider, CurrentTheme.Border, 1, 0.5)
            
            local SliderLabel = Instance.new("TextLabel")
            SliderLabel.Size = UDim2.new(1, -70, 0, 25)
            SliderLabel.Position = UDim2.new(0, 12, 0, 8)
            SliderLabel.BackgroundTransparency = 1
            SliderLabel.Text = config.Name
            SliderLabel.Font = Enum.Font.GothamSemibold
            SliderLabel.TextSize = 14
            SliderLabel.TextColor3 = CurrentTheme.Text
            SliderLabel.TextXAlignment = Enum.TextXAlignment.Left
            SliderLabel.Parent = Slider
            
            local ValueLabel = Instance.new("TextLabel")
            ValueLabel.Size = UDim2.new(0, 60, 0, 25)
            ValueLabel.Position = UDim2.new(1, -68, 0, 8)
            ValueLabel.BackgroundColor3 = CurrentTheme.Sidebar
            ValueLabel.BorderSizePixel = 0
            ValueLabel.Text = tostring(config.Default)
            ValueLabel.Font = Enum.Font.GothamBold
            ValueLabel.TextSize = 13
            ValueLabel.TextColor3 = CurrentTheme.Primary
            ValueLabel.Parent = Slider
            
            CreateCorner(ValueLabel, 6)
            
            local SliderTrack = Instance.new("Frame")
            SliderTrack.Size = UDim2.new(1, -24, 0, 6)
            SliderTrack.Position = UDim2.new(0, 12, 1, -18)
            SliderTrack.BackgroundColor3 = CurrentTheme.Sidebar
            SliderTrack.BorderSizePixel = 0
            SliderTrack.Parent = Slider
            
            CreateCorner(SliderTrack, 3)
            
            local SliderFill = Instance.new("Frame")
            SliderFill.Size = UDim2.new((config.Default - config.Min) / (config.Max - config.Min), 0, 1, 0)
            SliderFill.BackgroundColor3 = CurrentTheme.Primary
            SliderFill.BorderSizePixel = 0
            SliderFill.Parent = SliderTrack
            
            CreateCorner(SliderFill, 3)
            
            local dragging = false
            local currentValue = config.Default
            
            local function Update(input)
                local pos = math.clamp((input.Position.X - SliderTrack.AbsolutePosition.X) / SliderTrack.AbsoluteSize.X, 0, 1)
                local value = math.floor(config.Min + (config.Max - config.Min) * pos)
                
                currentValue = value
                Tween(SliderFill, {Size = UDim2.new(pos, 0, 1, 0)}, 0.1)
                ValueLabel.Text = tostring(value)
                
                task.spawn(config.Callback, value)
            end
            
            SliderTrack.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    dragging = true
                    Update(input)
                end
            end)
            
            SliderTrack.InputEnded:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    dragging = false
                end
            end)
            
            local inputChangedConnection
            inputChangedConnection = UserInputService.InputChanged:Connect(function(input)
                if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
                    Update(input)
                end
            end)
            
            Slider.Destroying:Connect(function()
                if inputChangedConnection then
                    inputChangedConnection:Disconnect()
                end
            end)
            
            return {
                Set = function(value)
                    value = math.clamp(value, config.Min, config.Max)
                    local pos = (value - config.Min) / (config.Max - config.Min)
                    
                    currentValue = value
                    Tween(SliderFill, {Size = UDim2.new(pos, 0, 1, 0)}, 0.3)
                    ValueLabel.Text = tostring(value)
                    
                    task.spawn(config.Callback, value)
                end,
                Get = function()
                    return currentValue
                end
            }
        end
        
        -- Dropdown
        function Elements:CreateDropdown(config)
            config = config or {}
            config.Name = config.Name or "Dropdown"
            config.Options = config.Options or {}
            config.Default = config.Default or config.Options[1]
            config.Callback = config.Callback or function() end
            
            local Dropdown = Instance.new("Frame")
            Dropdown.Name = "Dropdown"
            Dropdown.Size = UDim2.new(1, 0, 0, 45)
            Dropdown.BackgroundColor3 = CurrentTheme.Background
            Dropdown.BorderSizePixel = 0
            Dropdown.ClipsDescendants = true
            Dropdown.Parent = TabContent
            
            CreateCorner(Dropdown, 8)
            CreateStroke(Dropdown, CurrentTheme.Border, 1, 0.5)
            
            local DropButton = Instance.new("TextButton")
            DropButton.Size = UDim2.new(1, 0, 0, 45)
            DropButton.BackgroundTransparency = 1
            DropButton.Text = ""
            DropButton.Parent = Dropdown
            
            local DropLabel = Instance.new("TextLabel")
            DropLabel.Size = UDim2.new(1, -45, 0, 45)
            DropLabel.Position = UDim2.new(0, 12, 0, 0)
            DropLabel.BackgroundTransparency = 1
            DropLabel.Text = config.Name .. ": " .. (config.Default or "Nenhum")
            DropLabel.Font = Enum.Font.GothamSemibold
            DropLabel.TextSize = 14
            DropLabel.TextColor3 = CurrentTheme.Text
            DropLabel.TextXAlignment = Enum.TextXAlignment.Left
            DropLabel.Parent = Dropdown
            
            local Arrow = Instance.new("TextLabel")
            Arrow.Size = UDim2.new(0, 35, 0, 45)
            Arrow.Position = UDim2.new(1, -40, 0, 0)
            Arrow.BackgroundTransparency = 1
            Arrow.Text = "‚ñº"
            Arrow.Font = Enum.Font.GothamBold
            Arrow.TextSize = 12
            Arrow.TextColor3 = CurrentTheme.Primary
            Arrow.Parent = Dropdown
            
            local OptionsList = Instance.new("Frame")
            OptionsList.Size = UDim2.new(1, 0, 0, 0)
            OptionsList.Position = UDim2.new(0, 0, 0, 45)
            OptionsList.BackgroundTransparency = 1
            OptionsList.Parent = Dropdown
            
            local OptionsLayout = Instance.new("UIListLayout")
            OptionsLayout.SortOrder = Enum.SortOrder.LayoutOrder
            OptionsLayout.Padding = UDim.new(0, 2)
            OptionsLayout.Parent = OptionsList
            
            local isOpen = false
            local selected = config.Default
            
            for _, option in ipairs(config.Options) do
                local OptionBtn = Instance.new("TextButton")
                OptionBtn.Size = UDim2.new(1, -8, 0, 32)
                OptionBtn.Position = UDim2.new(0, 4, 0, 0)
                OptionBtn.BackgroundColor3 = CurrentTheme.Sidebar
                OptionBtn.BorderSizePixel = 0
                OptionBtn.Text = option
                OptionBtn.Font = Enum.Font.Gotham
                OptionBtn.TextSize = 13
                OptionBtn.TextColor3 = CurrentTheme.Text
                OptionBtn.AutoButtonColor = false
                OptionBtn.Parent = OptionsList
                
                CreateCorner(OptionBtn, 6)
                
                OptionBtn.MouseEnter:Connect(function()
                    Tween(OptionBtn, {BackgroundColor3 = CurrentTheme.Primary}, 0.2)
                end)
                
                OptionBtn.MouseLeave:Connect(function()
                    Tween(OptionBtn, {BackgroundColor3 = CurrentTheme.Sidebar}, 0.2)
                end)
                
                OptionBtn.MouseButton1Click:Connect(function()
                    selected = option
                    DropLabel.Text = config.Name .. ": " .. option
                    
                    isOpen = false
                    Tween(Dropdown, {Size = UDim2.new(1, 0, 0, 45)}, 0.3)
                    Tween(Arrow, {Rotation = 0}, 0.3)
                    
                    task.spawn(config.Callback, option)
                end)
            end
            
            DropButton.MouseButton1Click:Connect(function()
                isOpen = not isOpen
                
                if isOpen then
                    local height = 45 + (#config.Options * 34)
                    Tween(Dropdown, {Size = UDim2.new(1, 0, 0, height)}, 0.3)
                    Tween(Arrow, {Rotation = 180}, 0.3)
                else
                    Tween(Dropdown, {Size = UDim2.new(1, 0, 0, 45)}, 0.3)
                    Tween(Arrow, {Rotation = 0}, 0.3)
                end
            end)
            
            return {
                Set = function(value)
                    if table.find(config.Options, value) then
                        selected = value
                        DropLabel.Text = config.Name .. ": " .. value
                        task.spawn(config.Callback, value)
                    end
                end,
                Get = function()
                    return selected
                end
            }
        end
        
        -- Input
        function Elements:CreateInput(config)
            config = config or {}
            config.Name = config.Name or "Input"
            config.Placeholder = config.Placeholder or "Inserir texto..."
            config.Default = config.Default or ""
            config.Callback = config.Callback or function() end
            
            local Input = Instance.new("Frame")
            Input.Name = "Input"
            Input.Size = UDim2.new(1, 0, 0, 65)
            Input.BackgroundColor3 = CurrentTheme.Background
            Input.BorderSizePixel = 0
            Input.Parent = TabContent
            
            CreateCorner(Input, 8)
            CreateStroke(Input, CurrentTheme.Border, 1, 0.5)
            
            local InputLabel = Instance.new("TextLabel")
            InputLabel.Size = UDim2.new(1, -20, 0, 25)
            InputLabel.Position = UDim2.new(0, 12, 0, 8)
            InputLabel.BackgroundTransparency = 1
            InputLabel.Text = config.Name
            InputLabel.Font = Enum.Font.GothamSemibold
            InputLabel.TextSize = 14
            InputLabel.TextColor3 = CurrentTheme.Text
            InputLabel.TextXAlignment = Enum.TextXAlignment.Left
            InputLabel.Parent = Input
            
            local InputBox = Instance.new("TextBox")
            InputBox.Size = UDim2.new(1, -24, 0, 28)
            InputBox.Position = UDim2.new(0, 12, 1, -36)
            InputBox.BackgroundColor3 = CurrentTheme.Sidebar
            InputBox.BorderSizePixel = 0
            InputBox.Text = config.Default
            InputBox.PlaceholderText = config.Placeholder
            InputBox.Font = Enum.Font.Gotham
            InputBox.TextSize = 13
            InputBox.TextColor3 = CurrentTheme.Text
            InputBox.PlaceholderColor3 = CurrentTheme.TextDim
            InputBox.ClearTextOnFocus = false
            InputBox.Parent = Input
            
            CreateCorner(InputBox, 6)
            CreatePadding(InputBox, 8)
            
            InputBox.Focused:Connect(function()
                Tween(InputBox, {BackgroundColor3 = CurrentTheme.Background}, 0.2)
            end)
            
            InputBox.FocusLost:Connect(function(enter)
                Tween(InputBox, {BackgroundColor3 = CurrentTheme.Sidebar}, 0.2)
                if enter then
                    task.spawn(config.Callback, InputBox.Text)
                end
            end)
            
            return {
                Set = function(text)
                    InputBox.Text = text
                end,
                Get = function()
                    return InputBox.Text
                end
            }
        end
        
        -- Label
        function Elements:CreateLabel(text)
            local Label = Instance.new("TextLabel")
            Label.Name = "Label"
            Label.Size = UDim2.new(1, 0, 0, 32)
            Label.BackgroundColor3 = CurrentTheme.Background
            Label.BackgroundTransparency = 0.5
            Label.BorderSizePixel = 0
            Label.Text = text
            Label.Font = Enum.Font.Gotham
            Label.TextSize = 13
            Label.TextColor3 = CurrentTheme.TextDim
            Label.TextXAlignment = Enum.TextXAlignment.Left
            Label.Parent = TabContent
            
            CreateCorner(Label, 6)
            CreatePadding(Label, 12)
            
            return {
                Set = function(newText)
                    Label.Text = newText
                end
            }
        end
        
        return Elements
    end
    
    -- Notification
    function Window:Notify(config)
        config = config or {}
        config.Title = config.Title or "Notifica√ß√£o"
        config.Description = config.Description or ""
        config.Duration = config.Duration or 3
        
        local NotifContainer = GUI:FindFirstChild("Notifications")
        if not NotifContainer then
            NotifContainer = Instance.new("Frame")
            NotifContainer.Name = "Notifications"
            NotifContainer.Size = UDim2.new(0, 320, 1, -20)
            NotifContainer.Position = UDim2.new(1, -330, 0, 10)
            NotifContainer.BackgroundTransparency = 1
            NotifContainer.Parent = GUI
            
            local NotifLayout = Instance.new("UIListLayout")
            NotifLayout.SortOrder = Enum.SortOrder.LayoutOrder
            NotifLayout.Padding = UDim.new(0, 8)
            NotifLayout.VerticalAlignment = Enum.VerticalAlignment.Bottom
            NotifLayout.Parent = NotifContainer
        end
        
        local Notif = Instance.new("Frame")
        Notif.Size = UDim2.new(1, 0, 0, 0)
        Notif.BackgroundColor3 = CurrentTheme.Surface
        Notif.BorderSizePixel = 0
        Notif.LayoutOrder = -os.clock()
        Notif.Parent = NotifContainer
        
        CreateCorner(Notif, 10)
        CreateStroke(Notif, CurrentTheme.Primary, 2)
        
        local NotifTitle = Instance.new("TextLabel")
        NotifTitle.Size = UDim2.new(1, -45, 0, 20)
        NotifTitle.Position = UDim2.new(0, 12, 0, 10)
        NotifTitle.BackgroundTransparency = 1
        NotifTitle.Text = config.Title
        NotifTitle.Font = Enum.Font.GothamBold
        NotifTitle.TextSize = 14
        NotifTitle.TextColor3 = CurrentTheme.Text
        NotifTitle.TextXAlignment = Enum.TextXAlignment.Left
        NotifTitle.TextTransparency = 1
        NotifTitle.Parent = Notif
        
        local NotifDesc = Instance.new("TextLabel")
        NotifDesc.Size = UDim2.new(1, -45, 0, 35)
        NotifDesc.Position = UDim2.new(0, 12, 0, 28)
        NotifDesc.BackgroundTransparency = 1
        NotifDesc.Text = config.Description
        NotifDesc.Font = Enum.Font.Gotham
        NotifDesc.TextSize = 12
        NotifDesc.TextColor3 = CurrentTheme.TextDim
        NotifDesc.TextXAlignment = Enum.TextXAlignment.Left
        NotifDesc.TextYAlignment = Enum.TextYAlignment.Top
        NotifDesc.TextWrapped = true
        NotifDesc.TextTransparency = 1
        NotifDesc.Parent = Notif
        
        local CloseBtn = Instance.new("TextButton")
        CloseBtn.Size = UDim2.new(0, 28, 0, 28)
        CloseBtn.Position = UDim2.new(1, -36, 0, 8)
        CloseBtn.BackgroundColor3 = CurrentTheme.Background
        CloseBtn.BorderSizePixel = 0
        CloseBtn.Text = "√ó"
        CloseBtn.Font = Enum.Font.GothamBold
        CloseBtn.TextSize = 18
        CloseBtn.TextColor3 = CurrentTheme.TextDim
        CloseBtn.Parent = Notif
        
        CreateCorner(CloseBtn, 6)
        
        Tween(Notif, {Size = UDim2.new(1, 0, 0, 70)}, 0.3, Enum.EasingStyle.Back)
        task.wait(0.15)
        Tween(NotifTitle, {TextTransparency = 0}, 0.25)
        Tween(NotifDesc, {TextTransparency = 0.3}, 0.25)
        
        local function Close()
            Tween(NotifTitle, {TextTransparency = 1}, 0.2)
            Tween(NotifDesc, {TextTransparency = 1}, 0.2)
            task.wait(0.1)
            Tween(Notif, {Size = UDim2.new(1, 0, 0, 0)}, 0.25)
            task.wait(0.25)
            Notif:Destroy()
        end
        
        CloseBtn.MouseButton1Click:Connect(Close)
        
        CloseBtn.MouseEnter:Connect(function()
            Tween(CloseBtn, {BackgroundColor3 = CurrentTheme.Error}, 0.2)
        end)
        
        CloseBtn.MouseLeave:Connect(function()
            Tween(CloseBtn, {BackgroundColor3 = CurrentTheme.Background}, 0.2)
        end)
        
        task.delay(config.Duration, Close)
    end
    
    return Window
end

-- Destroy
function TugaHub:Destroy()
    for _, window in ipairs(TugaHub.Windows) do
        if window.GUI then
            window.GUI:Destroy()
        end
    end
    TugaHub.Windows = {}
end

return TugaHub
